<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="7dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/r1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:padding="2dp">

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly Subscription"
                    android:textColor="@color/orange"
                    android:textSize="16sp"
                    android:textStyle="bold" />




            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:gravity="right"
                >



                <TextView
                    android:id="@+id/tv_order_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="19th Jan 2021"
                    android:textColor="@color/black_alpha"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l1"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rv_min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:padding="2dp">

                <TextView
                    android:id="@+id/txt_totalamnt"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Total :"
                    android:textColor="@color/light_Black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_total_amnt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/txt_totalamnt"
                    android:text="2000"
                    android:textColor="@color/light_Black"
                    android:textSize="15sp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:padding="2dp">

                <TextView
                    android:id="@+id/txt_ordertime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time :"
                    android:textColor="@color/light_Black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_ordered_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/txt_ordertime"
                    android:text="10th Oct 2020"
                    android:textColor="@color/light_Black"
                    android:textSize="15sp" />


            </RelativeLayout>


            <RelativeLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:padding="2dp">

                <TextView
                    android:id="@+id/txt_validity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Validity :"
                    android:textColor="@color/light_Black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_validity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/txt_validity"
                    android:text="1 Month"
                    android:textColor="@color/light_Black"
                    android:textSize="15sp" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/tv_cancel"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel Subscription"
                        android:textColor="@color/red"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:textStyle="bold" />




                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    >



                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="Pending"
                        android:textColor="@color/orange"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>
</androidx.cardview.widget.CardView>